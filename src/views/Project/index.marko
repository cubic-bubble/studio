class {
  onCreate(){
    this.state = {
      activeTool: 'directory',
      showMenu: true
    }
  }
  onShowMenu( status ){ this.state.showMenu = status }
  onMenuToggle( name ){ this.state.activeTool = name }

  getContent( type ){
    
    let list = []

    switch( type ){
      case 'API': list = [
                            { name: 'Collection One Name' },
                            { name: 'Collection One Name' }
                          ]
          break
      case 'environments': list = [
                            { name: 'Environment One Name' },
                            { name: 'Environment One Name' }
                          ]
          break
      case 'directory': list = [
                          { name: 'Root' },
                          { name: 'Dependencies' },
                          { name: 'Build' }
                        ]
          break
    }

    return { type, list }
  }
}

