          <!-- Navigation Block -->
          <Navigation show=state.showMenu
                      active=state.activeTool
                      on-toggle('onMenuToggle')/>
                      
          <!-- Content Tree Block -->
          <ContentTree ...component.getContent( state.activeTool )
                        on-show-menu('onShowMenu')/>

          <!-- Main Block -->
          <main.main-block.col.px-0.overflow-hidden>
            <!-- Tabs line -->
            <HeaderTabs type=state.activeTool list=EditorTabs/>
            
            <div.h-100.position-relative style="padding-top:3rem">
